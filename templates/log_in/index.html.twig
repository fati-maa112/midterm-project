<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login / Register</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    :root {
      --bg: #faf7f0;
      --primary: #7a8661; /* olive */
      --accent: #b79b7f;  /* sand */
    }

    * { box-sizing: border-box; margin: 0; padding: 0; font-family: "Poppins", sans-serif; }

    body {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      background: var(--bg);
    }

    .container {
      position: relative;
      width: 900px;
      height: 520px;
      background: #fff;
      border-radius: 14px;
      overflow: hidden;
      box-shadow: 0 18px 40px rgba(0,0,0,.12);
    }

    /* forms */
    .form-box {
      position: absolute;
      top: 0;
      width: 50%;
      height: 100%;
      background: #fff;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 0 40px;
      transition: 0.6s ease-in-out;
    }

    .form-box h2 {
      margin-bottom: 20px;
    }

    .form-box input {
      width: 100%;
      padding: 12px;
      margin: 10px 0;
      border: 1px solid #ddd;
      border-radius: 8px;
    }

    .form-box button {
      width: 100%;
      padding: 12px;
      margin-top: 10px;
      border: none;
      border-radius: 8px;
      background: var(--primary);
      color: #fff;
      font-weight: 600;
      cursor: pointer;
    }

    /* login is visible first */
    .login-box { left: 0; z-index: 2; }
    .register-box { right: 0; opacity: 0; z-index: 1; }

    /* sliding panel */
    .overlay {
      position: absolute;
      top: 0;
      left: 50%;
      width: 50%;
      height: 100%;
      background: linear-gradient(135deg, var(--accent), var(--primary));
      border-radius: 150px 0 0 150px;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
      transition: 0.6s ease-in-out;
      z-index: 5;
    }

    .overlay h2 { margin-bottom: 10px; }
    .overlay p { margin-bottom: 20px; }
    .overlay button {
      background: transparent;
      border: 2px solid #fff;
      color: #fff;
      padding: 10px 26px;
      border-radius: 30px;
      cursor: pointer;
      font-weight: 600;
    }

    /* active state */
    .container.active .login-box {
      transform: translateX(-100%);
      opacity: 0;
      z-index: 1;
    }

    .container.active .register-box {
      transform: translateX(-100%);
      opacity: 1;
      z-index: 2;
    }

    .container.active .overlay {
      transform: translateX(-100%);
      border-radius: 0 150px 150px 0;
    }
  </style>
</head>
<body>
  <div class="container" id="container">
    <!-- Login form -->
    <div class="form-box login-box">
      <h2>Login</h2>
      <input type="text" placeholder="Username">
      <input type="password" placeholder="Password">
      <button>Login</button>
    </div>

    <!-- Register form -->
    <div class="form-box register-box">
      <h2>Register</h2>
      <input type="text" placeholder="Username">
      <input type="email" placeholder="Email">
      <input type="password" placeholder="Password">
      <button>Register</button>
    </div>

    <!-- Overlay panel -->
    <div class="overlay" id="overlay">
      <h2>Hello, Welcome!</h2>
      <p>Donâ€™t have an account?</p>
      <button id="toggleBtn">Register</button>
    </div>
  </div>

  <script>
    const container = document.getElementById("container");
    const toggleBtn = document.getElementById("toggleBtn");
    let showRegister = false;

    toggleBtn.addEventListener("click", () => {
      container.classList.toggle("active");
      if (!showRegister) {
        toggleBtn.textContent = "Login";
        showRegister = true;
      } else {
        toggleBtn.textContent = "Register";
        showRegister = false;
      }
    });
  </script>
</body>
</html>
