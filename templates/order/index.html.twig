{% extends 'base.html.twig' %}

{% block title %}Products - Naturae Admin{% endblock %}
{% block page_title %}Order Details{% endblock %}

{% block body %}
{% set currentRoute = app.request.attributes.get('_route') %}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<style>
    
    /* Content */
    .content {
        padding: 40px 50px;
        background: var(--color-bg);
        min-height: calc(100vh - 80px);
    }

    .content-header {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 25px;
    }

    .btn-add {
        background: var(--color-olive);
        color: #fff;
        padding: 10px 20px;
        border-radius: 30px;
        text-decoration: none;
        font-size: 15px;
        font-weight: 600;
        letter-spacing: 0.5px;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-add:hover {
        background: var(--color-sand);
        transform: translateY(-2px);
        box-shadow: 0 5px 12px rgba(0,0,0,0.15);
    }

    /* Table */
    .table-container {
        background: var(--color-light);
        border-radius: 16px;
        padding: 25px 30px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.06);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

    thead {
        background-color: #f5f3ed;
        color: var(--color-olive);
        font-weight: 600;
    }

    th, td {
        padding: 14px 18px;
        border-bottom: 1px solid var(--color-border);
        vertical-align: middle;
    }

    tbody tr:hover {
        background-color: #f8f7f2;
        transition: background 0.3s ease;
    }

    /* Action buttons */
    td form { display: inline; }

    .btn-view, .btn-edit {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        font-size: 14px;
        margin: 0 3px;
        border-radius: 8px;
        transition: 0.2s;
        color: white;
    }

    .btn-view { background-color: #6B7755; }
    .btn-view:hover { background-color: #556042; }

    .btn-edit { background-color: #C2B280; color: #6B7755; }
    .btn-edit:hover { background-color: #a9986c; }

    .text-center {
        text-align: center;
        padding: 20px;
        color: #888;
        font-style: italic;
    }

    /* Status badges */
    .badge {
        padding: 6px 10px;
        border-radius: 12px;
        font-size: 13px;
        font-weight: 600;
        color: white;
    }

    .bg-pending { background-color: #b79b7f; }
    .bg-processing { background-color: #c2b280; color: #333; }
    .bg-completed { background-color: #7a8661; }
    .bg-canceled { background-color: #b55239; }

    .sidebar a.active {
    background: var(--color-sand);
    color: #fff;
    font-weight: 600;
}
.sidebar a.active i {
    color: #fff;
}

</style>



    <div class="content">
        <div class="content-header">
            <a href="{{ path('app_order_new') }}" class="btn-add"><i class="fas fa-plus"></i> Add Order</a>
        </div>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 8%;">ID</th>
                        <th style="width: 25%;">Customer</th>
                        <th style="width: 15%;">Total</th>
                        <th style="width: 15%;">Status</th>
                        <th style="width: 22%;">Created At</th>
                        <th style="width: 15%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.id }}</td>
                        <td><strong>{{ order.customer.name }}</strong></td>
                        <td>â‚±{{ order.total|number_format(2, '.', ',') }}</td>
                        <td>
                            {% if order.status == 'Pending' %}
                                <span class="badge bg-pending">Pending</span>
                            {% elseif order.status == 'Processing' %}
                                <span class="badge bg-processing">Processing</span>
                            {% elseif order.status == 'Completed' %}
                                <span class="badge bg-completed">Completed</span>
                            {% elseif order.status == 'Canceled' %}
                                <span class="badge bg-canceled">Canceled</span>
                            {% endif %}
                        </td>
                        <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i') : '' }}</td>
                        <td>
                            <a href="{{ path('app_order_show', {'id': order.id}) }}" class="btn-view" title="View"><i class="fas fa-eye"></i></a>
                            <a href="{{ path('app_order_edit', {'id': order.id}) }}" class="btn-edit" title="Edit"><i class="fas fa-edit"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">No orders found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
