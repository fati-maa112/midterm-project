<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}My Dashboard{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap (quick styling) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            display: flex;
            min-height: 100vh;
            overflow: hidden;
        }
        /* Sidebar */
        #sidebar {
            width: 220px;
            background: #343a40;
            color: white;
            flex-shrink: 0;
        }
        #sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 12px 20px;
        }
        #sidebar a:hover {
            background: #495057;
        }

        /* Main content */
        #content {
            flex-grow: 1;
            padding: 20px;
            background: #f8f9fa;
            overflow-y: auto;
        }

        /* Top navbar */
        #topnav {
            background: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div id="sidebar">
        <h4 class="p-3">MyApp</h4>
        <a href="{{ path('app_dashboard') }}">ğŸ“Š Dashboard</a>
        {# <a href="{{ path('app_profile') }}">ğŸ‘¤ Profile</a> #}
{# <a href="{{ path('app_settings') }}">âš™ï¸ Settings</a> #}
{# <a href="{{ path('app_logout') }}">ğŸšª Logout</a> #}

    </div>

    <!-- Main content -->
    <div id="content">
        <!-- Top navbar -->
        <div id="topnav">
            <span>Welcome, {{ app.user ? app.user.username : 'Guest' }}</span>
            <button class="btn btn-sm btn-outline-secondary">Notifications</button>
        </div>

        <!-- Page body -->
        <div class="mt-3">
            {% block body %}{% endblock %}
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
