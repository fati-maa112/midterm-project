{% extends 'base_login.html.twig' %}

{% block title %}Login / Register{% endblock %}

{% block body %}
<style>
  :root {
    --bg: #f6f6f2;
    --primary: #69754c;
    --accent: #9e8b6d;
    --text-dark: #333;
    --text-light: #fff;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
    font-family: "Poppins", sans-serif;
  }

  body {
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #f6f7f2, #e8e9e1);
  }

  .container {
  position: relative;
  width: 700px;
  height: 460px;
  background: #fff;
  border-radius: 18px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
  display: flex;
  transform: scale(0.95);
}


  /* ===========================
     HEADER / BRAND
  ============================ */
  .brand {
    position: absolute;
    top: 25px;
    left: 40px;
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--primary);
    letter-spacing: 1px;
  }

  /* ===========================
     FORM STYLING
  ============================ */
  .form-box {
  flex: 1;
  padding: 40px 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    transition: 0.6s ease-in-out;
  }

  .form-box h2 {
    margin-bottom: 25px;
    font-size: 2rem;
    color: var(--primary);
    font-weight: 600;
  }

  .form-box {
  flex: 1;
  padding: 60px 40px; /* reduced from 70px */
}

  .login-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transform: translateX(40px); /* move it slightly toward the center */
}



  .input-group {
    position: relative;
    margin-bottom: 15px;
  }

  .input-group i {
    position: absolute;
    top: 15px;
    left: 12px;
    color: #8c8c8c;
  }

  .form-box input {
    width: 100%;
    padding: 14px 14px 14px 40px;
    border: 1px solid #ccc;
    border-radius: 10px;
    background: #f7faff;
    font-size: 15px;
    transition: all 0.3s;
  }

  .form-box input:focus {
    border-color: var(--primary);
    outline: none;
    box-shadow: 0 0 8px rgba(105,117,76,0.3);
  }

  .form-box button {
    width: 100%;
    padding: 14px;
    margin-top: 20px;
    border: none;
    border-radius: 10px;
    background: var(--primary);
    color: var(--text-light);
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .form-box button:hover {
    background: #556239;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0,0,0,0.15);
  }

  .forgot-link {
    display: block;
    margin-top: 10px;
    text-align: center;
    color: #6b705c;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.2s ease;
  }

  .forgot-link:hover {
    color: var(--accent);
    text-decoration: underline;
  }

  /* ===========================
     OVERLAY STYLING
  ============================ */
  .overlay {
    flex: 1;
    background: linear-gradient(135deg, var(--primary), var(--accent));
    color: var(--text-light);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    text-align: center;
    padding: 40px;
    transition: 0.6s ease-in-out;
    clip-path: polygon(20% 0, 100% 0, 100% 100%, 0% 100%);
  }

  .overlay h2 {
    font-size: 1.6rem;
    font-weight: 700;
    margin-bottom: 12px;
  }

  .overlay p {
    font-size: 14px;
    max-width: 220px;
    opacity: 0.9;
    margin-bottom: 20px;
    line-height: 1.4;
  }

  .overlay button {
    background: transparent;
    border: 2px solid #fff;
    color: #fff;
    padding: 12px 32px;
    border-radius: 30px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s;
  }

  .overlay button:hover {
    background: #fff;
    color: var(--primary);
  }

  /* ===========================
     TOGGLE ANIMATION
  ============================ */
  .register-box {
    opacity: 0;
    pointer-events: none;
  }

  .container.active .login-box {
    transform: translateX(-100%);
    opacity: 0;
    pointer-events: none;
  }

  .container.active .register-box {
    opacity: 1;
    pointer-events: all;
  }

  /* ===========================
     RESPONSIVE
  ============================ */
  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      height: auto;
      width: 90%;
    }

    .brand {
      position: static;
      text-align: center;
      margin-top: 20px;
    }

    .overlay {
      clip-path: none;
      width: 100%;
      padding: 20px;
    }

    .form-box, .overlay {
      width: 100%;
      padding: 30px;
    }
  }
</style>

<div class="container" id="container">
  <div class="brand"></div>

  <!-- Login -->
  <div class="form-box login-box">
    <h2>Login</h2>
    {% if error %}
      <div style="color: red; margin-bottom: 10px;">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}
    <form method="post" action="{{ path('app_login') }}">
      <div class="input-group">
        <i class="fas fa-envelope"></i>
        <input type="text" name="_username" placeholder="Email" required>
      </div>
      <div class="input-group">
        <i class="fas fa-lock"></i>
        <input type="password" name="_password" placeholder="Password" required>
      </div>
      <button type="submit">Login</button>
      <a href="#" class="forgot-link">Forgot password?</a>
    </form>
  </div>

  <!-- Register -->
  <div class="form-box register-box">
    <h2>Create Account</h2>
    <form method="post" action="/register">
      <div class="input-group">
        <i class="fas fa-user"></i>
        <input type="text" name="reg_username" placeholder="Username" required>
      </div>
      <div class="input-group">
        <i class="fas fa-lock"></i>
        <input type="password" name="reg_password" placeholder="Password" required>
      </div>
      <button type="submit">Register</button>
    </form>
  </div>

  <!-- Overlay -->
  <div class="overlay">
    <h2>Hello, Welcome!</h2>
    <p>Donâ€™t have an account? Create one to get started.</p>
    <button id="toggleBtn">Register</button>
  </div>
</div>

<!-- FontAwesome for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<script>
  const container = document.getElementById("container");
  const toggleBtn = document.getElementById("toggleBtn");
  let showRegister = false;

  toggleBtn.addEventListener("click", () => {
    container.classList.toggle("active");
    toggleBtn.textContent = showRegister ? "Register" : "Login";
    showRegister = !showRegister;
  });
</script>
{% endblock %}
