<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard - Skincare Admin</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <style>
        :root {
            --color-bg: #faf7f0;
            --color-sand: #b79b7f;
            --color-olive: #7a8661;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: var(--color-bg);
            color: #333;
        }

        .Menu {
          position: fixed;
          top: 10px;
          left: 20px;
          width: 20px;
        }

        /* Sidebar */
        .sidebar {
            width: 70px;
            background: #7a8661;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding: 20px 10px;
            box-sizing: border-box;
            overflow: hidden;
            transition: width 0.3s ease;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .sidebar:hover { width: 220px; }

        .sidebar a {
            display: flex;
            align-items: center;
            color: #fff;
            padding: 10px 15px;
            margin: 8px 0;
            text-decoration: none;
            border-radius: 6px;
            white-space: nowrap;
            overflow: hidden;
        }

        .sidebar a span {
            margin-left: 10px;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .sidebar:hover a span { opacity: 1; }

        .sidebar a:hover { background: var(--color-sand); }

        .sidebar-bottom {
            margin-top: auto;
        }

        .sidebar .user-info {
            text-align: center;
            color: #fff;
            margin-bottom: 20px;
        }

        .sidebar .user-info i {
            font-size: 40px;
            display: block;
            margin-bottom: 5px;
        }

        /* Main */
        .main {
            margin-left: 70px;
            transition: margin-left 0.3s ease;
        }

        .sidebar:hover ~ .main { margin-left: 220px; }

        /* Topbar */
        .topbar {
            background: #fff;
            padding: 15px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid #ddd;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .logo {
            height: 40px;
        }

        .search-bar {
            flex: 1;
            display: flex;
            justify-content: center;
        }

        .search-bar input {
            width: 50%;
            padding: 6px 12px;
            border: 1px solid #ccc;
            border-radius: 20px;
            font-size: 14px;
        }

        .topbar-icons {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .topbar-icons .icon {
            font-size: 18px;
            cursor: pointer;
            color: var(--color-olive);
        }

        /* Content */
        .content { padding: 20px; }

        .cards {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .card {
            background: #fff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .card h3 {
            margin: 0 0 10px 0;
            color: var(--color-olive);
        }

        .updates, .orders, .reviews {
            background: #fff;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        table { width: 100%; border-collapse: collapse; }
        th, td { padding: 12px; text-align: left; border-bottom: 1px solid #eee; }

        .status {
            padding: 5px 10px;
            border-radius: 6px;
            color: #fff;
            font-size: 0.9em;
        }
        .approved { background: var(--color-olive); }
        .pending { background: var(--color-sand); }
        .delivered { background: var(--color-sand); }

        .chart-container { width: 100%; max-width: 600px; margin: auto; }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div>
            <img src="{{ asset('image/list.png')}}" alt="Menu" class="Menu">
            <a href="#"><i class="fas fa-home"></i> <span>Dashboard</span></a>
            <a href="#"><i class="fas fa-box"></i> <span>Orders</span></a>
            <a href="#"><i class="fas fa-users"></i> <span>Customers</span></a>
            <a href="#"><i class="fas fa-leaf"></i> <span>Products</span></a>
            <a href="#"><i class="fas fa-chart-line"></i> <span>Reports</span></a>
        </div>
        <div class="sidebar-bottom">
            <div class="user-info">
                <i class="fas fa-user-shield"></i>
                <span>Admin</span>
            </div>
            <a href="#"><i class="fas fa-sign-out-alt"></i> <span>Logout</span></a>
        </div>
    </div>

    <!-- Main -->
    <div class="main">
        <!-- Top bar -->
        <div class="topbar">
            <div class="search-bar">
                <input type="text" placeholder="Search...">
            </div>
            <img src="{{ asset('image/LOGO.png')}}" alt="NATURAE" class="logo">
            <div class="topbar-icons">
                <i class="fas fa-bell icon"></i>
                <i class="fas fa-user-circle icon"></i>
            </div>
        </div>

        <!-- Dashboard content -->
        <div class="content">
            <h1>Dashboard</h1>

            <div class="cards">
                <div class="card">
                    <h3><i class="fas fa-dollar-sign"></i> Sales</h3>
                    <p>$25,970</p>
                    <small>Last 24 hours</small>
                </div>
                <div class="card">
                    <h3><i class="fas fa-coins"></i> Revenue</h3>
                    <p>$14,270</p>
                    <small>Last 24 hours</small>
                </div>
                <div class="card">
                    <h3><i class="fas fa-credit-card"></i> Expenses</h3>
                    <p>$4,270</p>
                    <small>Last 24 hours</small>
                </div>
            </div>

            <div class="updates">
                <h2><i class="fas fa-bell"></i> Updates</h2>
                <ul>
                    <li>New customer registered (2 mins ago)</li>
                    <li>Order #1023 shipped (10 mins ago)</li>
                    <li>Product restocked (1 hour ago)</li>
                </ul>
            </div>

            <div class="orders">
                <h2><i class="fas fa-box-open"></i> Recent Orders</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>ID</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Facial Cleanser</td>
                            <td>#1001</td>
                            <td>22 Sept 2025</td>
                            <td><span class="status approved">Approved</span></td>
                        </tr>
                        <tr>
                            <td>Herbal Toner</td>
                            <td>#1002</td>
                            <td>21 Sept 2025</td>
                            <td><span class="status pending">Pending</span></td>
                        </tr>
                        <tr>
                            <td>Aloe Moisturizer</td>
                            <td>#1003</td>
                            <td>20 Sept 2025</td>
                            <td><span class="status delivered">Delivered</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="reviews">
                <h2><i class="fas fa-star"></i> Customer Reviews</h2>
                <div class="chart-container">
                    <canvas id="reviewsChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart.js -->
    <script>
        const ctx = document.getElementById('reviewsChart').getContext('2d');
        const reviewsChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['5 Stars', '4 Stars', '3 Stars', '2 Stars', '1 Star'],
                datasets: [{
                    label: 'Number of Reviews',
                    data: [120, 90, 40, 15, 5],
                    backgroundColor: [
                        'var(--color-olive)',
                        'var(--color-sand)',
                        '#c7d3a5',
                        '#e6b07e',
                        '#d96f6f'
                    ],
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, ticks: { stepSize: 20 } }
                }
            }
        });
    </script>
</body>
</html>
