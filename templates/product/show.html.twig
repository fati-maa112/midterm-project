{% extends 'base_login.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
<style>
    body {
        background: #fdf9f7;
        font-family: 'Poppins', sans-serif;
        color: #333;
    }

    .product-details {
        max-width: 1000px;
        margin: 60px auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 40px;
        align-items: center;
    }

    .product-details img {
        width: 100%;
        height: auto;
        border-radius: 20px;
        box-shadow: 0 8px 30px rgba(0,0,0,0.08);
    }

    .product-info h1 {
        font-size: 2.2rem;
        font-weight: 600;
        margin-bottom: 20px;
        color: #7a8661; /* olive */
    }

    .product-info p {
        font-size: 1rem;
        color: #555;
        margin-bottom: 20px;
        line-height: 1.6;
    }

    .product-price {
        font-size: 1.4rem;
        font-weight: bold;
        color: #b79b7f; /* sand */
        margin-bottom: 25px;
    }

    .actions {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .btn {
        display: inline-block;
        padding: 12px 24px;
        border-radius: 30px;
        font-size: 0.95rem;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn-back {
        background: #333;
        color: #fff;
    }
    .btn-back:hover {
        background: #7a8661;
    }

    .btn-edit {
        background: #b79b7f;
        color: #fff;
    }
    .btn-edit:hover {
        background: #a98867;
    }

    .btn-delete {
        background: #c0392b;
        color: #fff;
    }
    .btn-delete:hover {
        background: #922b21;
    }
</style>

<div class="product-details">
    <div class="product-image">
    {% if product.image %}
        <img src="{{ asset('images/' ~ product.image) }}" 
             alt="{{ product.name }}" 
             style="max-width: 500px; border-radius: 10px; box-shadow: 0 3px 6px rgba(0,0,0,0.2);">
    {% else %}
        <img src="https://via.placeholder.com/500x500?text=No+Image" 
             alt="No image" 
             style="max-width: 500px; opacity: 0.7;">
    {% endif %}
</div>


    <div class="product-info">
        <h1>{{ product.name }}</h1>
        <div class="product-price">₱{{ product.price|number_format(2, '.', ',') }}</div>
        <p>{{ product.description }}</p>

        <div class="actions">
            <a href="{{ path('app_product_index') }}" class="btn btn-back">← Back to Products</a>
            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-edit">Edit Product</a>

            <form method="post" 
                  action="{{ path('app_product_delete', {'id': product.id}) }}" 
                  onsubmit="return confirm('Are you sure you want to delete this product?');" 
                  style="display:inline;">
                
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                
                <button class="btn btn-delete">Delete</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
